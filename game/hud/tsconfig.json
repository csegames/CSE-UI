{
  "compilerOptions": {
    "target": "es6",
    "noImplicitAny": true,
    "removeComments": false,
    "outDir": "./tmp",
    "sourceMap": false,
    "jsx": "react",
    "module": "commonjs",
    "noImplicitUseStrict": true,
    "noUnusedLocals": true,
    "alwaysStrict": false,
    "skipLibCheck": true,
    "suppressImplicitAnyIndexErrors": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "plugins": [
      { "name": "tslint-language-service"}
    ]
  },
  "compileOnSave": false,
  "buildOnSave": false,
  "resolution": "typings",
  "moduleResolution": "node",
  "exclude": [
    "typings/browser.d.ts",
    "typings/browser",
    "typings/main.d.ts",
    "typings/main",
    "tmp",
    "dist",
    "publish",
    "node_modules"
  ],
  "atom": {
    "rewriteTsconfig": false
  }
}
